{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sitepack.org/schemas/dataset-selector.schema.json",
  "title": "SitePack Dataset Selector",
  "type": "object",
  "required": ["artifactId"],
  "properties": {
    "artifactId": { "type": "string", "minLength": 1 },
    "where": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/condition" }
    }
  },
  "$defs": {
    "condition": {
      "type": "object",
      "required": ["field", "op", "value"],
      "properties": {
        "field": { "type": "string", "pattern": "^/" },
        "op": { "enum": ["=", "in"] },
        "value": {}
      },
      "oneOf": [
        {
          "properties": {
            "op": { "const": "=" },
            "value": { "type": ["string", "number", "boolean", "null"] }
          }
        },
        {
          "properties": {
            "op": { "const": "in" },
            "value": {
              "type": "array",
              "minItems": 1,
              "items": { "type": ["string", "number", "boolean", "null"] }
            }
          }
        }
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
