{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sitepack.org/schemas/asset-index.schema.json",
  "title": "SitePack Asset Index Entry",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/single" },
    { "$ref": "#/$defs/chunked" }
  ],
  "$defs": {
    "common": {
      "type": "object",
      "required": ["id", "sha256", "size"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "mime": { "type": "string", "minLength": 1 },
        "size": { "type": "integer", "minimum": 0 },
        "sha256": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
        "originalName": { "type": "string" }
      },
      "additionalProperties": true
    },
    "chunk": {
      "type": "object",
      "required": ["index", "size", "sha256", "path"],
      "properties": {
        "index": { "type": "integer", "minimum": 1 },
        "size": { "type": "integer", "minimum": 0 },
        "sha256": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
        "path": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "single": {
      "allOf": [
        { "$ref": "#/$defs/common" },
        {
          "required": ["path"],
          "not": { "required": ["chunks"] },
          "properties": {
            "path": { "type": "string", "minLength": 1 }
          }
        }
      ]
    },
    "chunked": {
      "allOf": [
        { "$ref": "#/$defs/common" },
        {
          "required": ["chunks"],
          "not": { "required": ["path"] },
          "properties": {
            "chunks": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/chunk" }
            }
          }
        }
      ]
    }
  }
}
