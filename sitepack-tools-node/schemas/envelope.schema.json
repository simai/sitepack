{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sitepack.org/schemas/envelope.schema.json",
  "title": "SitePack Encrypted Envelope Header",
  "type": "object",
  "required": ["spec", "createdAt", "encryption", "payload"],
  "properties": {
    "spec": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": { "const": "sitepack-envelope" },
        "version": { "const": "0.1.0" }
      },
      "additionalProperties": false
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "encryption": {
      "type": "object",
      "required": ["scheme"],
      "properties": {
        "scheme": { "const": "age" },
        "recipients": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "mode": { "type": "string", "enum": ["recipients", "passphrase"] }
      },
      "additionalProperties": true
    },
    "payload": {
      "type": "object",
      "required": ["file", "originalExtension", "container", "payloadDigest"],
      "properties": {
        "file": { "type": "string", "minLength": 1 },
        "originalExtension": { "const": ".sitepack" },
        "container": { "type": "string", "enum": ["zip", "tar"] },
        "payloadDigest": { "type": "string", "pattern": "^sha256:[0-9a-fA-F]{64}$" },
        "payloadSize": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "annotations": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
